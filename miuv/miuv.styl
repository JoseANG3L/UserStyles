@-moz-document url-prefix("https://dsia.uv.mx/miuv/escritorio/login.aspx"), url-prefix("https://dsiapes.uv.mx/MiUVestudiantes/"), url-prefix("https://dsiapes.uv.mx/MiuvEstudiantes/") {
    
    :root {
