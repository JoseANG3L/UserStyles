    .divTitulo {
        margin-top: 0.4rem;
        margin-bottom: 0.5rem;
    }
    
    .divTitulo > label {
        color: white !important;
    }
    
    .bloques {
        padding: 0.6rem;
        background-color: rgba(0, 0, 0, 0.1) !important;
    }
    
    #divData {
        margin-left: 0.5rem;
        line-height: normal;
    }
    
    #divData > p, .bloques > p, #divImagen > p {
        color: #58adf7 !important;
    }
    
    #divData > p > span, #divImagen > span, .bloques > p > span, .lblNombre {
