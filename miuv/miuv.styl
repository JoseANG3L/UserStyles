        border-radius: 0.5rem;
    }
    
    .dvCali {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    #form1:has(#div-contenedor, #ul-botones) {
        margin: 1rem;
    }
    
    #div-contenedor > #ul-botones {
        margin-top: 1rem;
    }
    
    #div-titulos {
        margin-bottom: 1rem;
    }
    
    #div-titulos, .fila2 {
        background: #0202023b;
        border-radius: 1rem !important;
    }
    
    #divMensaje {
        border-radius: 0.5rem;
        margin-bottom: 0.5rem;
    }
    
    .divRequisitos {
        padding: 0.5rem;
    }
    
    /* Horario de clases */
    .dvPieSeccion, #divPie {
        margin-left: 1rem;
        margin-right: 1rem;
    }
    
    .dvPieSecciones {
        background: transparent !important;
    }
    
    .aDetalles {
        background-color: #165ee6;
        border-radius: 0.5rem;
        box-shadow: 0 2px 5px rgb(0,0,0,0.2);
        height: auto !important;
        margin-bottom: -6px;
    }
    
    .div-tileSistema, .div-tileFijo, #rssTile, .tile-clicks, .div-tileSistema > a, .div-tileSistema > a > img, .div-tileFijo > a, .div-tileFijo > a > img {
        border-radius: 0.5rem;
    }
    
    #div-footGeneral > ul > li, #section-footGeneral > ul > li {
        color: lightgray;
    }
    
    #div-footGeneral > ul > li > a, #div-footBuzon > a, #section-footGeneral > ul > li > a, #section-footBuzon > a {
        color: #58adf7;
    }
    
    #ul-footGeneral-copyright > li, #ul-footGeneral-copyright > li {
        color: lightgray;
    }
    
    #div-footBuzon > a, #section-footBuzon > a {
        font-size: 21px;
    }
    
    #section-footBuzon > a > div {
        height: 0.4rem;
    }
    
    #section-footGeneral > #ul-footGeneral-mnu {
        margin-bottom: 0;
    }
    
    #section-footGeneral > #ul-footGeneral-copyright {
        margin-bottom: 0.65rem;
    }
    
    .royalSlider.default .arrow.left {
        left: -44px;
    }
    
    .royalSlider.default .arrow.right {
        right: -40px;
    }
    
    
    /* Cursor effect */
    body, .divTileNoData {
        cursor: var(--cursor), auto !important;
    }
    
    /* Cursor hover */
    a:hover, img:hover, button:hover, input:hover, #btnEye:hover, #li-config:hover, #li-salir:hover, .grab-cursor:hover, .dvPanel:hover, #divCollapse01, #divCollapse02, .divCollapse01, .divCollapse02, .boton {
        cursor: var(--cursorHover), auto !important;
    }
    
    
